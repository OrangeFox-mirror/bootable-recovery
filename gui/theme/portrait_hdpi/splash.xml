<?xml version="1.0"?>
<recovery>
	<details>
		<resolution width="1080" height="1920"/>
		<author>OrangeFox dev team</author>
		<title>OrangeFox</title>
		<description>splash screen</description>
		<themeversion>3</themeversion>
	</details>
	
	<resources>
		<font name="splashtext1" filename="RobotoCondensed-Regular.ttf" size="70"/>
		<font name="splashtext2" filename="RobotoCondensed-Regular.ttf" size="150"/>
		<font name="splashtext3" filename="RobotoCondensed-Regular.ttf" size="50"/>
		<image name="splash" filename="splash"/>
	</resources>
	
	<variables>
		<variable name="background" value="#222222FF"/>
		<variable name="text" value="#E3E3E3FF"/>
	</variables>

	<pages>
		<page name="splash">
			<background color="%background%"/>		

			<object type="image">
				<image resource="splash"/>
				<placement x="0" y="0"/>
			</object>

</page>
</pages>
</recovery>
